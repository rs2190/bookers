<h1>Editing Book</h1>

<%= form_with model: @book do |b| %>
 <div class="field">
  <label for="book_title">Title</label>
  <div>
    <%= b.text_field :title %>
  </div>
</div>
<div class="field">
  <label for = "book_body">Body</label>
  <div>
    <%= b.text_area :body %>
  </div>
</div>
<div class="actions">
  <%= b.submit 'Update Book' %>
</div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %>
